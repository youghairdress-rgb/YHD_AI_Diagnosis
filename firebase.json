{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/requestDiagnosis",
        "function": "requestDiagnosis" // シンプルな形式に戻した
      },
      {
        "source": "/helloWorld",
        "function": "helloWorld" // シンプルな形式に戻した
      },
      // ★ 新しい書き換えルールを追加 ★
      {
        "source": "/generateHairstyleImage",
        "function": "generateHairstyleImage"
      },
      // 「**」は必ず最後に配置
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
    // "headers": [ ... ] // headersは一旦コメントアウトのまま
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  }
}

