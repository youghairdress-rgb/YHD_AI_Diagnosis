{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/requestDiagnosis",
        // ★★★ オブジェクト形式で functionId と region を指定 ★★★
        "function": {
          "functionId": "requestDiagnosis",
          "region": "us-central1" // Cloud Functionsをデプロイしたリージョン
        }
      },
      {
        "source": "/helloWorld",
        // ★★★ オブジェクト形式で functionId と region を指定 ★★★
        "function": {
          "functionId": "helloWorld",
          "region": "us-central1" // Cloud Functionsをデプロイしたリージョン
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
    // "headers": [ ... ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  }
}

